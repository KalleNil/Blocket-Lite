@model UsersModel

 <form method="post" asp-action="userLogin" asp-controller="Home">
        <div class="forms_div" id="forms_div">
            <div class="form-group">
                <label asp-for="username"></label>
                <input asp-for="username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="password"></label>
                <input asp-for="password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit"  id="loginbutton" value="Logga in" class="btn-btn-primary" />
            </div>

        </div> 
  </form>